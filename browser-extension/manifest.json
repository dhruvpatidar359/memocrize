{
  "manifest_version": 3,
  "name": "Memocrize",
  "version": "1.0",
  "permissions": [
    "contextMenus",
    "cookies",
    "tabs",
    "activeTab",
    "storage",
    "scripting",
    "desktopCapture"
    
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "host_permissions": [
    "http://localhost:3000/*",
    "http://localhost:3001/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["capture.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "take-partial-screenshot": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Take a partial screenshot"
    },
    "sendTextToServer": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      },
      "description": "Send the selected text to server"
    },
    "sendFullScreenShotToServer": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Send the full screenshot to server"
    }
  },
  "action": {
    "default_popup": "popup.html"
  
  },
  "web_accessible_resources": [
    {
      "resources": ["capture.html", "capture.js","collection_choice.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "externally_connectable": {
    "matches": ["*://*.google.com/*"]
}
 
}
