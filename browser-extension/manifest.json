{
  "manifest_version": 3,
  "name": "Text Sender",
  "version": "1.0",
  "permissions": [
    "contextMenus",
    "cookies",
    "tabs",
    "activeTab",
    "scripting",
    "desktopCapture"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "host_permissions": [
    "http://localhost:3000/*",
    "http://localhost:3001/*"
  ],
  "action": {
    "default_popup": "popup.html"
  
  },
  "web_accessible_resources": [
    {
      "resources": ["capture.html"],
      "matches": ["<all_urls>"]
    }
  ]
 
}
