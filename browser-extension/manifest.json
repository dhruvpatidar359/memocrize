{
    "manifest_version": 3,
    "name": "Firebase Storage Uploader",
    "version": "1.0",
    "description": "Upload selected text or screenshots to Firebase Storage",
    "permissions": [
      "storage",
      "activeTab",
      "contextMenus"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
  
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }